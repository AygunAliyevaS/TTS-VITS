    "audio_channels": 80,
    "decoder_channels": 512,
    "upsample_rates": [8, 8, 2, 2],
    "upsample_kernel_sizes": [16, 16, 4, 4]
  },
  "data": {
    "training_files": "filelists/train.txt",
    "validation_files": "filelists/val.txt",
    "sampling_rate": 22050,
    "filter_length": 1024,
    "hop_length": 256,
    "win_length": 1024,
    "max_audio_length": 8.0,
    "min_audio_length": 1.0,
    "use_phonemes": false,
    "lowercase": true
