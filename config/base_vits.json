{
  "train": {
    "batch_size": 16,
    "learning_rate": 2e-4,
    "max_epochs": 1000,
    "checkpoint_interval": 5,
    "log_interval": 50,
    "grad_accum_steps": 1,
    "num_workers": 4,
    "recon_weight": 1.0,
    "kl_weight": 0.1,
    "dur_weight": 0.1,
    "val_batch_size": 16
  },
  "model": {
